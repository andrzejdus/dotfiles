#!/bin/sh

PATH=$PATH:~/bin

if ! command -v zsh > /dev/null 2>&1; then
    echo "zsh not found"
    exit
fi

if ! command -v chezmoi > /dev/null 2>&1; then
    echo "chezmoi not found"
    exit
fi

# Install oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# Install zsh-autosuggestions plugin
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

# Install zsh-syntax-highlighting plugin
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting

# Initialize chezmoi
chezmoi init git@github.com:andrzejdus/dotfiles.git
git clone git@github.com:andrzejdus/dotfiles-private.git ~/.local/share/chezmoi-private

echo "Remember to run chezmoi apply for both public and private repository"

