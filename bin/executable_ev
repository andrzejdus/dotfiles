#!/bin/bash

echo "May I ask you for OTP, please?"
read otp

sudo openfortivpn vpn1.euro.com.pl:443 -vv --realm=KOMPUTER-INNY -u adus -c /home/gogoad/.config/euroforti -o $otp | while read line
do
  echo $line
  if [[ "$line" == *"Tunnel is up and running"* ]]; then
    echo "DNS config started"
    #sudo resolvectl dns ppp0 10.1.21.64 10.1.21.65
    #sudo resolvectl domain ppp0 esfr-test.com.pl jira confluence
    echo "DNS config done"
    break
  fi
done
