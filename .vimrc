set nocompatible
set backspace=indent,eol,start
set autoindent
set ruler
set showcmd
set incsearch
set hlsearch
set ai
set sw=2
set smarttab
set number
set expandtab
set tabstop=2
set hls ic
set noswapfile
filetype plugin on
syntax on
colorscheme desert

"This unsets the last search pattern register by hitting return
nnoremap <CR> :noh<CR><CR>
" nnoremap <esc> :noh<return><esc>
