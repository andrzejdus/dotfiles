export PATH=/opt/watcom/binl64:$HOME/bin:/usr/local/bin:$HOME/.gem/ruby/2.3.0/bin:$HOME/.local/bin:$PATH
export PATH="/home/gogoad/.local/share/gem/ruby/3.0.0/bin:$PATH"
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

export ZSH=~/.oh-my-zsh
export WATCOM=/opt/watcom

ZSH_THEME="agnoster"
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=white'
VI_MODE_SET_CURSOR=true
HYPHEN_INSENSITIVE="true"
COMPLETION_WAITING_DOTS="true"

plugins=(
    git
    web-search
    #sudo
    zsh-autosuggestions
    zsh-syntax-highlighting
    history-substring-search
    vi-mode
)

source $ZSH/oh-my-zsh.sh

if command -v exa > /dev/null 2>&1; then
  alias ls=exa
fi

export EDITOR='vim'
alias vim='vim'
alias v='vim'
if command -v nvim > /dev/null 2>&1; then
  export EDITOR='nvim'
  alias vim='nvim'
  alias v='nvim'
fi

bindkey -v
alias la='ls -la'
alias z='zeditor'
alias vivaldi='vivaldi-stable --password-store=gnome-libsecret --enable-features=UseOzonePlatform --ozone-platform=wayland'
alias cz='chezmoi'

alias n='nnn -dea'
export NNN_PLUG='p:preview-tui'

type bat && alias cat='bat -P'

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s /usr/share/nvm/init-nvm.sh ] && source /usr/share/nvm/init-nvm.sh
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export NODE_OPTIONS=--max_old_space_size=8192

[[ ! "$SSH_AUTH_SOCK" == *"gcr/ssh"* ]] && type keychain && eval `keychain --eval id_rsa`

type fastfetch && fastfetch
